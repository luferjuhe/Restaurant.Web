@model List<UserViewModel>


<div class="table-responsive">
    <table class="table">
        <thead class="thead-primary">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Fecha Alta</th>
                <th>Fecha Baja</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.CreationDate</td>
                        <td>@user.InactiveDate</td>
                        <td>
                            <div class="row">
                                <a class="btn-round btn-primary " style="margin-right:2px;" asp-action="Index" asp-controller="Users"><i class="fa-solid fa-pen-to-square"></i></a>
                                <button type="button" class="btn-round btn-danger " data-bs-toggle="modal" data-bs-target="#exampleModal@(user.UserId)">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </div>
                            <div class="modal fade" id="exampleModal@(user.UserId)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            ...
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>

